@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
    <div class="container-fluid">

        <div class="row">

            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Administration</span>
            </div>

            <div>
                <a class="btn btn-small btn-primary" href="/account/logout">Logout</a>
            </div>

        </div>

    </div>

</div>


<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <button type="button" class="btn-close" data-bs-dismiss="alert">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Manage Books and Transactions</strong> This page is for admin only. Please do not delete books without official permissions.
</div>

<div class="container-fluid">

    <div class="row p-2">

        <div class="col-3">

            <div class="d-grid gap-2">
                <NavLink class="btn btn-outline-primary" href="/admin/books"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                <NavLink class="btn btn-outline-primary" href="/admin/transactions"
                         ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Transactions</NavLink>
            </div>
        </div>

        <div class="col">
            @Body
        </div>


    </div>


</div>
